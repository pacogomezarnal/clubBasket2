{% extends 'base.html.twig' %}

{% block title %}Resultado index{% endblock %}

{% block body %}
    <h1>Resultado index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Puntoslocal</th>
                <th>Puntosvisitante</th>
                <th>Cancha</th>
                <th>Fecha</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resultado in resultados %}
            <tr>
                <td>{{ resultado.id }}</td>
                <td>{{ resultado.puntoslocal }}</td>
                <td>{{ resultado.puntosvisitante }}</td>
                <td>{{ resultado.cancha }}</td>
                <td>{{ resultado.fecha ? resultado.fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('resultado_show', {'id': resultado.id}) }}">show</a>
                    <a href="{{ path('resultado_edit', {'id': resultado.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('resultado_new') }}">Create new</a>
{% endblock %}
